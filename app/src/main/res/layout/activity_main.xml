<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.GeocodingActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#E6F6FD"
        android:orientation="vertical"
        android:padding="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/currents_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="40sp"
            android:text="APP tiempo"
            android:textAlignment="center"
            android:textColor="#00278A"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/etcity_redondo"
            android:drawableStart="?android:attr/actionModeWebSearchDrawable"
            android:ems="10"
            android:hint="Ciudad o coordenadas"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingStart="20sp"
            android:textColor="#000000"
            tools:ignore="RtlSymmetry" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/button_getByCoords"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20sp"
                android:background="@drawable/border_grey"
                android:onClick="getWeatherDetailsByCoords"
                android:text="Validar coordenadas"
                android:textColor="#000000"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/button_getByName"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:onClick="getWeatherDetailsByName"
                android:text="Validar toponimo"
                android:textColor="#000000"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </TableRow>

        <ListView
            android:id="@+id/listView_nuevasUbicaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>